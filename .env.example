TELEGRAM_TOKEN=
# Path to the SQLite database file (defaults to subs.db)
DB_PATH=./crypto.db
# Optional CoinGecko API key
COINGECKO_API_KEY=
# Optional base URL for the CoinGecko API
COINGECKO_BASE_URL=
# Log verbosity level (INFO, DEBUG, etc.)
LOG_LEVEL=INFO
# File path for log output (default bot.log; recreated if deleted)
LOG_FILE=bot.log
# Default percent change that triggers an alert
DEFAULT_THRESHOLD=0.1
# Default subscription interval when none is specified
DEFAULT_INTERVAL=5m
# How often prices are checked
PRICE_CHECK_INTERVAL=30s
